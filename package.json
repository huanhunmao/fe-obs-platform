{
  "name": "fe-obs-platform",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently -n server,dashboard -c blue,green \"pnpm --filter @fe/server dev\" \"pnpm --filter @fe/dashboard dev\"",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "start": "pnpm --filter @fe/server start"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.6.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}